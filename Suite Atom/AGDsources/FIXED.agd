        LET X = 8
        EXIT
    ELSE
        IF CANGORIGHT
            LET IMAGE = 0
            ANIMATE
            SPRITERIGHT
        ENDIF
    ENDIF
ENDIF
IF KEY LEFT
    IF X <= 8
        SCREENLEFT
        LET X = 168
        EXIT
    ELSE
        IF CANGOLEFT
            LET IMAGE = 1
            ANIMATE
            SPRITELEFT
        ENDIF
    ENDIF
ENDIF
