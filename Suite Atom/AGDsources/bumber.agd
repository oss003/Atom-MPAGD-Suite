EVENT PLAYER
LET LINE 22
LET COLUMN 6
; COLOUR 0
MESSAGE 5
; COLOUR 7
IF X <= 8
    SCREENLEFT
    LET X = 228
    SUBTRACT 1 FROM Y
ENDIF
IF X > = 230
    SCREENRIGHT
    LET X = 10
    SUBTRACT 1 FROM Y
ENDIF
DETECTOBJ
IF OBJ <= 9
    IF I = 1
        LET M = OBJ
        LET I = 0
    ELSE
        IF C = 0
            LET C = 1
            LET O = OBJ
            IF P = 10
                IF M <= 246
                    ADD O TO M
                ENDIF
            ELSE
                IF P = 11
                    IF O <= M
                        SUBTRACT O FROM M
                    ENDIF
                ELSE
                    IF P = 12
                        LET E = M
                        MULTIPLY M BY O
                        DIVIDE M BY O
                        IF M <> E
                            LET M = E
                        ELSE
                            MULTIPLY M BY O
                        ENDIF
                    ELSE
                        IF P = 13
                            IF O <= M
                                DIVIDE M BY O
                            ENDIF
                        ENDIF
                    ENDIF
                ENDIF
            ENDIF
        ENDIF
    ENDIF
ELSE
    IF OBJ <= 13
        IF C = 1
            LET P = OBJ
            LET C = 0
        ENDIF
    ENDIF
ENDIF
LET LINE 22
LET COLUMN 6
DISPLAY M
IF M = N
    SCORE 100
    LET LINE 22
    LET COLUMN 25
    SHOWSCORE
    RESTART
ENDIF
IF KEY FIRE
    LET I = 1
    LET C = 0
    LET P = 0
    LET M = 0
ENDIF
IF KEY RIGHT
    IF CANGORIGHT
        LET IMAGE = 1
        IF A = 0
            ANIMATE
            IF FRAME = 3
                ; SOUND 3
            ENDIF
        ENDIF
        SPRITERIGHT
    ENDIF
ENDIF
IF KEY LEFT
    IF CANGOLEFT
        LET IMAGE = 0
        IF A = 0
            ANIMATE
            IF FRAME = 3
                ; SOUND 3
            ENDIF
        ENDIF
        SPRITELEFT
    ENDIF
ENDIF
IF KEY UP
    TABLEJUMP
    ; SOUND 4
ENDIF
IF CANGODOWN
    TABLEFALL
ENDIF
IF DEADLY
    KILL
ENDIF


